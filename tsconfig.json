{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "outDir": "./dist",
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015.promise",
      "es2016",
      "es2017.object"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}